#include <stdio.h>
#include <stdlib.h>

int main(){
	float degrau=0,tamanho_degrau=0,altura=0,cont=0;
	printf("Digite a altura do degrau: ");
	scanf("%f",&tamanho_degrau);
	printf("Digite a altura que deseja alcancar: ");
	scanf("%f",&altura);
	for(degrau=0;degrau<altura;degrau=degrau+tamanho_degrau){
		cont++;
	}
	printf("Foram necessarios %.f degraus para chegar a altura desejada\n",cont);
	system("pause");
}
