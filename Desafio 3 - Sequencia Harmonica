#include <stdio.h>
#include <stdlib.h>

double Harmonia(int n){
	float vet[n];
	float somatoria = 0;
	for(int i=1;i<=n;i++){
  		vet[i] = (float) 1/i;
	}
	
	for(int i=1;i<=n;i++ ){
		somatoria += vet[i];
	}
	return somatoria;
}

int main(){
	int n;
	printf("Digite um numero: ");
	scanf("%i",&n);
	printf("%f\n",Harmonia(n));
	system("pause");
}
